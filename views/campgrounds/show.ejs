<%- include("../partials/header") %>
<div class="container py-4">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<div class="="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
			<a class="btn btn-primary mt-3" href="/campgrounds">Go Back</a>
		</div>
		<div class="col-md-9">
			<div class="card mb-5">
				<img class="w-100" src=<%= campground.image %>>
				<div class="caption-full px-3 pt-2">
					<h4 class="float-right">$9.00/night</h4>
					<h4><a href=""><%= campground.name %></a></h4>
					<p><%= campground.description %></p>
				</div>
			</div>
			<div class="card px-3 pt-4 bg-light">
				<div class="text-right">
					<p class=""><a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">New Comment</a></p>
				</div>
				<% campground.comments.forEach(function(comment) { %>
					<div class="row">
						<div class="col-md-12">
							<p class="my-0"><strong><%= comment.author %></strong>
							<span class="float-right font-italic">10 days ago</span></p>
							<p><%= comment.text %></p>
						</div>
					</div>
				<% }) %>
			</div>
		</div>
	</div>
</div>


<%- include("../partials/footer") %>